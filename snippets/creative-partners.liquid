<style>
  .creative-partners {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 50px;
}

.creative-partners ul {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.creative-partners ul li {
  list-style: none;
  margin: 20px;
}

.creative-partners ul li a {
  text-decoration: none;
  display: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 190px;
  height: 190px;
  background: #ccc;
  text-align: left;
  padding-left: 20px;
  transform: rotate(0deg) skew(25deg) translate(0);
  transition: .5s;
  margin-left: 40px;
  box-shadow: -20px 20px 10px rgba(0, 0, 0, .5);
}

.creative-partners ul li a:before {
  content: "";
  position: absolute;
  top: 10px;
  left: -20px;
  height: 100%;
  width: 20px;
  background: #b1b1b1;
  transform: .5s;
  transform: rotate(0deg) skewY(-45deg);
}

.creative-partners ul li a:after {
  content: "";
  position: absolute;
  bottom: -20px;
  left: -10px;
  height: 20px;
  width: 100%;
  background: #b1b1b1;
  transform: .5s;
  transform: rotate(0deg) skewX(-45deg);
}

.creative-partners img {
  width: 100%;
  padding: 10px;
}

.creative-partners ul li a .white-logo, .creative-partners ul li:hover .black-logo {
  display: none;
}

.creative-partners img {
  width: 100%;
  padding: 10px;
}

.creative-partners ul li a:hover {
  transform: rotate(-5deg) skew(25deg) translate(0);
  box-shadow: -50px 50px 50px rgba(0,0,0,.5)
}

.creative-partners ul li:hover .fa,.creative-partners ul li:hover span {
  color: #fff
}

.creative-partners ul li:hover a {
  background: #161616
}

.creative-partners ul li:hover a:before {
  background: #000
}

.creative-partners ul li:hover a:after {
  background: #343434
}

.creative-partners ul li a .white-logo,.creative-partners ul li:hover .black-logo {
  display: none
}

.creative-partners ul li:hover .white-logo {
  display: block
}

@media (max-width: 700px) {
  .creative-partners ul li a {
      width:110px;
      height: 110px
  }

  .creative-partners ul li {
      margin: 15px
  }

  .creative-partners ul {
      margin-left: -25px
  }
}

</style>

